        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/textFieldBoxes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            app:labelText="College ID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldBoxes3">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/register_collegeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/tl00xxxx0000"
                android:inputType="text"
                android:maxLength="12" />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/textFieldBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            app:labelText="Department"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldBoxes2">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/register_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/inShort"
                android:inputType="text"
                android:maxLength="3" />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/textFieldBoxes4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            app:labelText="Contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldBoxes">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/register_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/_10_digits"
                android:inputType="phone"
                android:maxLength="10" />

        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        <Button
            android:id="@+id/button_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="@string/register"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFieldBoxes4" />

    </androidx.constraintlayout.widget.ConstraintLayout>


